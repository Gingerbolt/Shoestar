<html>
<head>
    <title>College</title>
</head>
    <body>
        <h1>Welcome to Shoestar!</h1>

        {% if stores is not empty %}
            <p>Known Stores:</p>
            <ul>
                {% for store in stores %}
                    <li><a href="/store/{{ store.getId }}">{{ store.getName }}</a></li>
                    <form name="store_delete{{ store.getId }}" action='/{{ store.getId }}/delete' method='post'>
                        <button name="store_delete{{ store.getId }}" type='submit'>Delete Store</button>
                    </form>
                {% endfor %}
            </ul>
        {% else %}
          <p>No stores known, add some!</p>
        {% endif %}

        <p>Track a new store:</p>

        <form action="/store_post" method="post">
            <label for="name">Store name:</label>
            <input id="name" name="name" type="text" required>
            <label for="location">Store location:</label>
            <input id="location" name="location" type="text">

            <button type="submit">Add store</button>
        </form>

    </body>
</html>
